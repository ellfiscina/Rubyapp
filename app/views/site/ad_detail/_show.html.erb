<div class="thumbnail">
  <%= image_tag @ad.picture.url(:large), class:"img-responsive" %>

  <div class="caption-full">
    <h4 class="pull-right"><%= humanized_money_with_symbol @ad.price %></h4>
    <h4><a href="#"><%= @ad.title %></a>
    </h4>
    <%= @ad.description.html_safe %>
  </div>

  <div class="ratings">
    <p class="pull-right"><%= "#{@ad.comments_count} comentários" %></p>
    <p>
      <%= rating_for @ad, 'quality' %>
    </p>
  </div>
</div>

<div class="well">
  <div class="text-right">
    <% if member_signed_in? %>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">Deixe um comentário</button>
    <% else %>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal" disabled="disabled">Deixe um comentário</button>
    <% end -%>
  </div>
  <hr>

  <%= render partial: 'site/ad_detail/comments' %>

</div>

<%= render partial: 'site/ad_detail/comments_modal' %>
